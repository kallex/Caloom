      <SharedViews>
        <SharedView name="w5">
          <ViewStructure><!--these are the formControl used in the ControllerAction -->
            <!-- Text input -->
            <Text minLength="5" maxLength="56" isRequired="true" name="title">
              <Label language="english"></Label>
            </Text>
             <!-- textarea -->
            <Description minLength="10" maxLength="144" isRequired="true" name="description">
              <Label language="English"></Label>
            </Description>
            <!-- checkbox -->
            <Checkbox type="checkbox" value="1" isRequired="False" name="checkbox">
              <Label language"English"></Label>
            </Checkbox>
            <!-- radiobutton -->
            <RadioButton>
              <Label language"English"></Label>
            </RadioButton>
            <!-- dropdown but the word SelectList is used by bootstrap -->
            <SelectList>
              <Label></Label>
              <Choice>
                <Label language="english">item 1</Label>
              </Choice>
            </SelectList>
            <!-- multicolon select list -->
            <MultiChoiseList name="category">
              <Label language="English"></Label>
              <Choice value="dynamically loaded">
                <Label language="english">item 1</Label>
              </Choice>         
            </MultiChoiseList>
            <!-- datepicker -->
            <DatePicker>
              <input data-datepicker="datepicker" class="small" type="text" value="01/05/2011" />
              <input class="mini" type="text" value="12:00am" />
            </DatePicker>
            <!-- http://www.filamentgroup.com/examples/slider_v2/index3.php -->
            <Slider valueA="" ValueB="">
              <Label language="english"></Label>
            </Slider>
          </ViewStructure>
        </SharedView>
      </SharedViews>
		  <ControllerActions>
		    <!-- the W5 default-what structure -->
        <ControllerAction name="default-what">
          <ViewStructure>
            <Display fromControl="title" name=""/>
            <Display fromControl="description" name=""/>
            <Display fromControl="category" name=""/>
            <Display fromControl="keyword" name=""/>
          </ViewStructure>
        </ControllerAction>
          <!-- the W5 default-when structure -->
        <ControllerAction name="default-when">
          <ViewStructure>
            <Display fromControl="title" name="Title"/>
            <Display fromControl="Slider" name="Date"/><!-- here we should have a start date and end date -->
            <Display fromControl="Slider" name="Time"/><!-- here we should have a start time and end time -->
            <Display fromControl="SelectList" name="Repeat"/><!-- here is going to be a repeat list - items are once (default setting), weekly, monthly -->
          </ViewStructure>
        </ControllerAction>        
          <!-- the W5 default-where structure -->
        <ControllerAction name="default-where">
            <ViewStructure>
              <Display fromControl="title" name=""/>
            </ViewStructure>
         </ControllerAction>        
          <!-- the W5 default-whom structure -->
          <ControllerAction name="default-whom"><!-- whom is about who can get this information and who is this information about, in the case of an event with speakers and such -->
            <ViewStructure>
              <Display fromControl="title" name=""/>
            </ViewStructure>
          </ControllerAction>        
          <!-- the W5 default-worth structure -->
          <ControllerAction name="default-worth">
            <ViewStructure>
              <Display fromControl="title" name=""/>
            </ViewStructure>
          </ControllerAction>        
		  </ControllerActions>
